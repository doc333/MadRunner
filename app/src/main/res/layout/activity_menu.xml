<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ff6ea1f7"
    tools:context=".MenuActivity" android:id="@+id/layout">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_button_label"
        android:id="@+id/play_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="startGame"
        android:textColor="#ffffc463" />
    <Button
        android:layout_below="@id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quit_button_label"
        android:id="@+id/exit_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="quitGame"
        android:textColor="#ffffc463" />
</RelativeLayout>
